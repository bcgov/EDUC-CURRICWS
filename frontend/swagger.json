{
    "swagger": "2.0",
    "info": {
        "version": "1.0.0",
        "title": "Curriculum Nodes Web API",
        "description": "A simple API to get Nodes"
    },
    "schemes": [
        "https"
    ],
    "host": "curric-webservice-hswww8-dev.pathfinder.gov.bc.ca",
    "basePath": "/",
    "paths": {
        "/all": {
            "get": {
                "summary": "Gets curriculum nodes",
                "description": "Returns a list containing all nodes.",
                "responses": {
                    "200": {
                        "description": "A list of Nodes",
                        "schema": {
                            "type": "array",
                            "items": {
                                "properties": {
                                    "_id": {
                                        "type": "string"
                                    },
                                    "field_course_name_1": {
                                        "type": "string"
                                    },
                                    "field_path_reference": {
                                        "type": "string"
                                    },
                                    "field_grade": {
                                        "type": "string"
                                    },
                                    "type": {
                                        "type": "string"
                                    },
                                    "Curriculum": {
                                        "type": "string"
                                    },
                                    "Content": [{
                                        "id": "string",
                                        "main content": "string",
                                        "sub-content": []
                                    }]
                                }
                            }
                        }
                    }
                }
            }
        },
        "/nodes/{gradeId}": {
            "get": {
                "description": "Returns a nodes based on a single Grade Level",
                "operationId": "findByGrade",
                "parameters":  [
                    {
                      "name": "id",
                      "in": "path",
                      "description": "ID of Grade",
                      "required": true,
                      "type": "string"
                    }
                  ],
                "responses": {
                    "200": {
                        "description": "A list of Nodes",
                        "schema": {
                            "type": "array",
                            "items": {
                                "properties": {
                                    "_id": {
                                        "type": "string"
                                    },
                                    "field_course_name_1": {
                                        "type": "string"
                                    },
                                    "field_path_reference": {
                                        "type": "string"
                                    },
                                    "field_grade": {
                                        "type": "string"
                                    },
                                    "type": {
                                        "type": "string"
                                    },
                                    "Curriculum": {
                                        "type": "string"
                                    },
                                    "Content": [{
                                        "id": "string",
                                        "main content": "string",
                                        "sub-content": []
                                    }]
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
